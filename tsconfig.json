{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@chawan/forms": ["packages/forms/src/index.ts"],
      "@chawan/react": ["packages/react/src/index.ts"],
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "dist",
    "**/*.test.*"
  ]
}